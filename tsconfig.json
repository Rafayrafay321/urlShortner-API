{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./",
    "typeRoots": ["./src/@types", "./node_modules/@types", "./node_modules"],
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "files": ["src/@types/express/index.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
